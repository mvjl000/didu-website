---
	export interface Props {
		title: string;
	}

	const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Odibee+Sans&family=Roboto+Condensed:wght@300;400&display=swap"
		rel="stylesheet">
	<title>{title}</title>
</head>

<body class="min-h-screen">
	<header class='flex justify-center w-full py-2 tablet:justify-start tablet:px-7 desktop:px-9'>
		<img src="../../public/svg/didu-logo.svg" alt="didu logo" />
	</header>
	<main class="my-4 px-4 tablet:px-10 desktop:px-12">
		<slot />
	</main>
</body>

</html>

<style is:global>
	html {
		font-family: 'Roboto Condensed', sans-serif;
		background-color: #FFFFFF;
	}

	* {
		box-sizing: border-box;
	}
</style>